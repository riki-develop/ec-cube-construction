<div class="row pb-2 mb-3">

<nav class="col-12 col-sm-7">

  <a href="{{ url('mypage') }}" class="btn btn-sm mb-1
  {% if mypageno|default('') == 'index' %}btn-secondary{% else %}btn-outline-success{% endif %}
  ">{{ 'ご注文履歴'|trans }}</a>

  {% if BaseInfo.option_favorite_product %}
  <a href="{{ url('mypage_favorite') }}" class="btn btn-sm mb-1
  {% if mypageno|default('') == 'favorite' %}btn-secondary{% else %}btn-outline-success{% endif %}
  ">{{ 'お気に入り一覧'|trans }}</a>
  {% endif %}

  <a href="{{ url('mypage_change') }}" class="btn btn-sm mb-1
  {% if mypageno|default('') == 'change' %}btn-secondary{% else %}btn-outline-success{% endif %}
  ">{{ '会員情報編集'|trans }}</a>

  <a href="{{ url('mypage_delivery') }}" class="btn btn-sm mb-1
  {% if mypageno|default('') == 'delivery' %}btn-secondary{% else %}btn-outline-success{% endif %}
  ">{{ 'お届け先一覧'|trans }}</a>

  <a href="{{ url('mypage_withdraw') }}" class="btn btn-sm mb-1
  {% if mypageno|default('') == 'withdraw' %}btn-secondary{% else %}btn-outline-success{% endif %}
  ">{{ '退会手続き'|trans }}</a>

</nav>

<div class="col-12 col-sm-5 small">
    <div class="p-sm-2 text-center">{{ 'ようこそ%last_name% %first_name%さん'|trans({ '%last_name%': app.user.name01, '%first_name%': app.user.name02 }) }}
    {% if BaseInfo.option_point %}
      <br class="d-block d-sm-none">{{ '現在の所持ポイントは %point%pt です。'|trans({ '%point%': app.user.point|number_format}) }}
    {% endif %}
    </div>
</div>

</div>
