{% extends 'default_frame.twig' %}

{% set body_class = 'front_page' %}

{% block stylesheet %}
    <style>
        @media screen and (min-width: 768px){
          body{
            overflow-x: hidden;
          }
          .slick-slider .slick-list {
            overflow: visible;
          }
        }

        .slick-slider img{
          max-width: 100%;
        }
        .main_visual{
          /* max-width:800px; */
          margin: 0 auto;
        }
    </style>
{% endblock %}

{% block javascript %}
    <script>
        $(function() {
            $('.main_visual').slick({
                dots: true,
                arrows: false,
                autoplay: true,
                speed: 300
            });
        });
    </script>
{% endblock javascript %}

{% block main %}
  <div class="main_visual row mb-5">
    <div class="item slick-slide"><img src="{{ asset('assets/img/top/img_hero_pc01.jpg') }}"></div>
    <div class="item slick-slide"><img src="{{ asset('assets/img/top/img_hero_pc02.jpg') }}"></div>
    <div class="item slick-slide"><img src="{{ asset('assets/img/top/img_hero_pc03.jpg') }}"></div>
  </div>
{% endblock %}