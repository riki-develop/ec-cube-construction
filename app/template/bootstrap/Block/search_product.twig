{% form_theme form 'Form/form_div_layout.twig' %}


<form method="get" class="mb-3 mb-lg-0" action="{{ path('product_list') }}">
  <div class="input-group">
    {{ form_widget(form.category_id, {'id': null, 'attr': {'class': 'form-select form-select-sm'}}) }}
    {{ form_widget(form.name, {'id': null, 'attr': {'class': 'form-control form-control-sm', 'placeholder' : 'キーワードを入力' }} ) }}
    <button class="btn btn-sm btn-secondary" type="submit">検索</button>
  </div>
</form>
